<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#252525"
    android:orientation="vertical"
    android:padding="20dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity"
    android:weightSum="1">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/unknow_state"
        android:id="@+id/SwitchStatusTextView"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"

        android:textSize="30dp"
        android:textColor="#ffffff"
         />




    <Button
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="@string/disable_button_state"
        android:id="@+id/button"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/sensor_1_place"
        android:id="@+id/temperatureView"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"

        android:textSize="20dp"
        android:textColor="#ffffff"
        />






    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/sensor_1_place"
        android:id="@+id/networkErrView"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"

        android:textSize="20dp"
        android:textColor="#ffffff"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/cmd_in_progress"
        android:id="@+id/CmdStatusTextView"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"

        android:textSize="10dp"
        android:textColor="#ffffff"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/sensor_1_place"
        android:id="@+id/gcm_sending"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"

        android:textSize="20dp"
        android:textColor="#ffffff"
        />
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/progressBar"
        android:layout_gravity="center"
        android:layout_weight="0.37" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_gravity="center_horizontal" />


</LinearLayout>
